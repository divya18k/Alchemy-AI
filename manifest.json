{
  "manifest_version": 3,
  "name": "AI Rewriter",
  "version": "1.0",
  "description": "Rewrites text using AI.",
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js" 
  }
}